{
    "version": "2.0.0",
    "tasks": [
        {
            // --- TASK 1: BUILD (Compiles and Links All Files) ---
            "label": "Build Bank System", 
            "type": "shell", 
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe", // Your confirmed compiler path
            "args": [
                "-I.",                                 // Search 1: Main folder (root)
                "-Iheaders",                           // Search 2: The dedicated 'headers' folder
                
                // The compiler finds these source files because of their explicit path:
                "Main.c", 
                "src/acc.c",
                "src/users.c",
                "src/transactions.c",
                
                "-o",
                "bank_system.exe",
                "-std=c11",
                "-Wall"
            ],
            "options": {
                "cwd": "${workspaceFolder}" 
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            // --- TASK 2: RUN (Executes the compiled file) ---
            "label": "Run Bank System",
            "type": "shell",
            "command": "./bank_system.exe", 
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test", 
            "dependsOn": ["Build Bank System"]
        }
    ]
}