{
    "version": "2.0.0",
    "tasks": [
        {
            // --- TASK 1: BUILD (Compiles and Links All Files) ---
            "label": "Build Bank System", 
            "type": "shell", 
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe", // Your confirmed compiler path
            "args": [
                "-I.",                          // Includes Banksys.h (which is in the root)
                "Main.c",                // Main.c is in the root
                "src/acc.c",            
                "src/users.c",                // Banksys.c is in the src folder
                "src/transfer.c",               // transfer.c is in the src folder
                "-o",
                "bank_system.exe",              // Creates the executable in the root
                "-std=c11",         
                "-Wall"
            ],
            "options": {
                // IMPORTANT: Command must run from the root folder
                "cwd": "${workspaceFolder}" 
            },
            "group": {
                "kind": "build",
                "isDefault": true // Makes this the default Ctrl+Shift+B task
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            // --- TASK 2: RUN (Executes the compiled file) ---
            "label": "Run Bank System",
            "type": "shell",
            "command": "./bank_system.exe", 
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test", 
            "dependsOn": ["Build Bank System"] // Only runs after a successful build
        }
    ]
}